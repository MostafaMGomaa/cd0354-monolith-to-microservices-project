pipeline{
	agent {label 'linux'}
	environment {
		DOCKERHUB_CREDENTIALS=credentials('dockerhub')
	}
	stages { 
	    stage('gitclone') {
			steps {
				git 'https://github.com/MostafaMGomaa/cd0354-monolith-to-microservices-project.git'
			}
		}
		stage('Build') {
			steps {
				sh 'docker build -t mostafamgomaa/reverseproxy:latest ./udagram-reverseproxy'
				sh 'docker build -t mostafamgomaa/udagram-api-user:latest ./udagram-api-user'
				sh 'docker build -t mostafamgomaa/udagram-api-feed:latest ./udagram-api-feed'
				sh 'docker build -t mostafamgomaa/udagram-frontend:latest ./udagram-frontend'
			}
		}
		stage('Login') {
			steps {
				sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
			}
		}
		stage('Push') {
			steps {

				sh 'docker push mostafamgomaa/reverseproxy:latest'
				sh 'docker push mostafamgomaa/udagram-api-user:latest'
				sh 'docker push mostafamgomaa/udagram-api-feed:latest'
				sh 'docker push mostafamgomaa/udagram-frontend:latest'
			}
		}
	}
	post {
		always {
			sh 'docker logout'
		}
	}
}
